@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>
<h4>Seller</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />
            <div asp-validation-summary="All" class=" text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="Seller.Name"></label>
                <input class="form-control" asp-for="Seller.Name" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Seller.Email"></label>
                <input class="form-control" asp-for="Seller.Email" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Seller.BirthDate"></label>
                <input class="form-control" asp-for="Seller.BirthDate" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Seller.BaseSalary"></label>
                <input class="form-control" asp-for="Seller.BaseSalary" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Seller.Department"></label>
                <select class="form-select" aria-label="Default select example" asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))"></select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

